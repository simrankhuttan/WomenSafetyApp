<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set corner radius for rounded edges -->
    <corners android:radius="15dp" />

    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Border stroke -->
    <stroke
        android:width="4dp"
        android:color="#F21010" />  <!-- Pink border color -->

    <!-- Padding inside EditText -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
